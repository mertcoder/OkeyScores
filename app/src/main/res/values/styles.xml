<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppNameStyle">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="UpperAppNameStyle">
        <item name="android:text">@string/upper_app_name</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SkyBlueButtonStyle">
        <item name="android:background">@drawable/sky_blue_button</item>
        <item name="android:textColor">@color/bg_black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_thin</item>
    </style>
    <style name="CardViewStyle">
        <item name="android:bottomRightRadius">25dp</item>
        <item name="cardCornerRadius">45dp</item>


    </style>
    <style name="WhiteButtonStyle">
        <item name="android:background">@drawable/white_button</item>
        <item name="android:textColor">@color/bg_black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_thin</item>
    </style>
    <style name="PopupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@color/cool_pink</item>
        <item name="android:width">200dp</item> <!-- Genişliği burada belirleniyor -->
    </style>
</resources>